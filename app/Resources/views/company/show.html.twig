{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="text-center">Showing {{ company.title }} company</h1>
        </div>

        <div class="row justify-content-center">
            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ company.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ company.title }}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ company.telephone }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ company.address }}</td>
                </tr>
                <tr>
                    <th>Postalcode</th>
                    <td>{{ company.postalcode }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ company.city }}</td>
                </tr>
                <tr>
                    <th>State</th>
                    <td>{{ company.state }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ company.description }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="row justify-content-center">
            <h5>Categories</h5>
        </div>
        <div class="row justify-content-center">
            {% for cat in company.categories %}
                <span class="badge badge-secondary mr-1">{{ cat.title }}</span>
            {% endfor %}
        </div>

        <div class="row justify-content-center mt-2">
            <a class="btn btn-primary ml-1" href="{{ path('index_search') }}" role="button">Do a New Search</a>
            <a class="btn btn-info ml-1" href="{{ path('company_edit', { 'id': company.id }) }}" role="button">Edit</a>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger ml-1">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
